<style>
  .product-container:hover .drug-backdrop {
    opacity: 0.3;
  }

  .product-container:hover .button-container {
    opacity: 1;
  }

  .drug-backdrop {
    height: 150px;
    width: 150px;
    margin: 0 auto;
    margin-bottom: 0 !important;
    opacity: 1;
    transition: 0.5s ease;
    backface-visibility: hidden;
  }

  .button-container {
    transition: 0.5s ease;
    opacity: 0;
    position: absolute;
    top: 30%;
    left: 50%;
    transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    text-align: center;
  }

  .cart-button {
    background: none;
    border: 2px solid #000;
    cursor: pointer;
    padding: 0.5em 1em;
    width: 7em;

  }

  .category-paragraph {
    margin-top: 0.5em;
    font-size: 15px;


  }

  .price {
    font-size: 14px;
  }

  .margin {
    margin-bottom: 4em;
  }

   @media (max-width: 575.98px) {
    .cart-button {
      background: none;
      border: 2px solid #000;
      cursor: pointer;
      padding: 0.5em 1em;
      width: 7em;
      font-size: 14px;
    }

    .copyright-text{
      font-size: 12px !important;
      margin-top: 4.5em !important;
    }
   }
</style>

<div class="container-fluid p-0" style="margin-bottom: 7em;">
  <div class="container" style="margin-top: 5em;">

    {{!-- <nav aria-label="breadcrumb" class="margin">
      <ol class="breadcrumb" style="background-color: #5cdb95; color: #ffffff">
        <li class="breadcrumb-item active" aria-current="page" style="color: #ffffff; font-size: 17px;">Anti-Malaria
        </li>
      </ol>
    </nav> --}}
    {{# each products }}
    <div class="row justify-content-center margin">
      {{# each this }}
      <div class="col-6 col-sm-6 col-lg-4 product-container">
        <img src="{{ this.imagepath }}" class="drug-backdrop">
        <div class="button-container">
          <a href="/add-to-cart/{{this._id}}" class="cart-button">Add to cart</a>
        </div>

        <p class="category-paragraph">{{ this.name }}</p>
        <p class="price">N{{ this.price }}</p>
      </div>
      {{/each}}
    </div>
    {{/each}}
  </div>
</div>